<Window x:Class="stimatdichjo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stimatdichjo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Acephimere">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="157*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ImageShow" HorizontalAlignment="Left" Height="325" Margin="41,50,0,0" VerticalAlignment="Top" Width="305" Grid.Column="1" Grid.ColumnSpan="2">
            <Image.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.25" Direction="270"/>
            </Image.Effect>
        </Image>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,30,0,0" FontFamily="FOT-RodinBokutoh Pro L" FontSize="36" RenderTransformOrigin="0.5,0.5" Grid.Column="2" Height="57" Width="430" Text="Pemilihan file" FontWeight="Thin"/>
        <Button x:Name="Impor_File_Button" Content="Impor file..." HorizontalAlignment="Left" Margin="233,173,0,0" VerticalAlignment="Top" Width="75" FontFamily="Neue Haas Grotesk Text Pro" Click="ImporFileButton" Grid.Column="2" Height="19" FontWeight="Medium"/>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="19" Margin="23,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="365" Grid.Column="2"/>
        <Button x:Name="Tampilkeun" Content="Tampilkeun" HorizontalAlignment="Left" Margin="313,173,0,0" VerticalAlignment="Top" Width="75" Click="TampilkeunButton" FontFamily="Neue Haas Grotesk Text Pro" Grid.Column="2" Height="19" FontWeight="Medium"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="23,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="FOT-RodinBokutoh Pro DB" FontSize="16"><Run Text="Masukkan"/><Run Text=" nama"/><Run Text=" "/><Run Text="file di kotak bawah ini"/></TextBlock>

    </Grid>
</Window>
